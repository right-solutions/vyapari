            </div>
            <div class="col-md-6">
              <%= search_form_kuppayam(StockEntry, store_manager_stock_entries_path(@store), text: @filters[:query]) %>
            </div>
          </div>
        </div>
        <%= clear_tag(10) %>

        <div id="div_stock_entry_index">
          <%= render :partial=>"vyapari/store_manager/stock_entries/index" %>
        </div>
